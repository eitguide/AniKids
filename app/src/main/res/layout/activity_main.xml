<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screen_home"
    tools:context="com.hackathon.anikids.view.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_big_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@drawable/big_logo" />

        <LinearLayout
            android:id="@+id/ll_feature_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_list_animal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button"
                android:text="Các con vật"
                android:textSize="32dp"
                android:textColor="#1abc9c"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_caudo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button"
                android:text="Câu đố"
                android:textColor="#1abc9c"
                android:textSize="32dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_footer">

    </FrameLayout>

</FrameLayout>
