<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackathon.anikids">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AniKidsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SplashScreen" />
        <activity android:name=".view.DetailActivity" />
        <activity android:name=".view.ListAnimalsActivity"></activity>
        <activity android:name=".view.QuestionActivity"
            android:theme="@style/ThemeSwipe"></activity>
        <activity
            android:name=".view.StoryActivity"
            android:theme="@style/ThemeSwipe"></activity>
        <activity android:name=".view.CropActivity"></activity>
        <activity
            android:name=".view.YoutubeActivity"
            android:theme="@style/Dialog"></activity>
        <activity android:name=".DrawActivity"></activity>
    </application>

</manifest>